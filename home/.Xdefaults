!URxvt.font: xft:FuraCode Nerd Font Mono:size=13,xft:Noto Color Emoji:size=5
URxvt.font: xft:FuraCode Nerd Font Mono:size=11,xft:Noto Emoji:size=7
!URxvt.font: xft:SauceCodePro\ Nerd\ Font:size=11

URxvt.Locale: en_US.UTF-8

!Xft.dpi:        96
!Xft.antialias:  1
!Xft.rgba:      	rgb
!Xft.hinting:    1
!Xft.hintstyle:  hintslight
!Xft.autohint: 0
!Xft.lcdfilter: lcddefault
URxvt.letterSpace: -0.5

URxvt.transparent: true
URxvt.shading: 30
URxvt.scrollBar: false
URxvt.scrollBar_right: false
URxvt.foreground: white
URxvt.background: black
URxvt.iso14755: False
URxvt.perl-ext-common: default,selection-to-clipboard,matcher,keyboard-select,resize-font

!URxvt.iconFile: /usr/share/icons/Mint-X/apps/96/utilities-terminal.svg

URxvt.keysym.C-Home           : \033[1;5H
URxvt.keysym.C-End            : \033[1;5F

!URxvt.keysym.C-Up:     font-size:increase
!URxvt.keysym.C-Down:   font-size:decrease
!URxvt.keysym.C-S-Up:   font-size:incglobal
!URxvt.keysym.C-S-Down: font-size:decglobal
!URxvt.keysym.C-equal:  font-size:reset
!URxvt.keysym.C-slash:  font-size:show
URxvt.keysym.C-minus:     resize-font:smaller
URxvt.keysym.C-plus:      resize-font:bigger
URxvt.keysym.C-equal:     resize-font:reset
URxvt.keysym.C-question:  resize-font:show

! for Vim 
! https://www.reddit.com/r/urxvt/comments/362m0s/vim_keybindings_can_finally_work_properly_in/
URxvt.keysym.C-Page_Up        : \033[5;5~
URxvt.keysym.C-Page_Down      : \033[6;5~

! URL handler
! https://wiki.archlinux.org/index.php/Rxvt-unicode#Clickable_URLs
URxvt.url-launcher:       sensible-browser
URxvt.keysym.C-Delete:    matcher:last
URxvt.keysym.M-Delete:    matcher:list
URxvt.keysym.M-Home  :    matcher:select
URxvt.matcher.button:     1

! keyboard-select
!http://www.github.com/muennich/urxvt-perls
URxvt.keysym.M-Escape: perl:keyboard-select:activate
URxvt.keysym.M-s: keyboard-select:search

